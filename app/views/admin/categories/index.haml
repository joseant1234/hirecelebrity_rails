.fixed-action-btn.new-button
  = link_to new_admin_category_path, remote: true, class: "btn-floating waves-effect waves-light deep-purple accent-4 btn-large" do
    %i.material-icons add

.card.no-margin
  .card-content
    %p.bold.medium CATEGORIES

    = form_tag admin_categories_path, method: :get, remote: true do
      .row.no-margin
        .input-field.col.s12.no-padding.search-input
          %i.material-icons.prefix search
          = text_field_tag :term
          = label_tag :term, 'Search by name'
      .row
        .col.s12.no-padding
          = button_tag :submit, "data-disable-with": "Searching ...", class: 'btn deep-purple accent-4 right' do
            Search

    = print_color_status

    .overflow-x
      %table.bordered.centered
        %thead#table_header
          = render 'table_header'
        %tbody#categories_index
          = render @categories


    .top-space.center.pagination-from-table
      = will_paginate @categories, renderer: MaterializePaginationCustomHelper::PaginateMaterailizeLinkRenderer

.modal.modal-with-footer#modalCategory
.modal.modal-with-footer#modalShowCategory

= render 'admin/shareds/modal_confirmation'
