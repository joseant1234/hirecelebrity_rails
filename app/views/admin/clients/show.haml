.card.no-margin
  .card-content

    .row.border-collection
      %nav.white.black-text.z-depth-0
        .nav-wrapper
          .col.s12
            = link_to 'Clients',admin_clients_path, class: "breadcrumb blue-text"
            = link_to @client.name,admin_client_path(@client), class: "breadcrumb blue-text"
            = link_to 'VIEW','', class: "breadcrumb black-text"

    .row
      .col.s12.m4
        %span.bold Image
      .col.s12.m4
        = print_zoom_image(@client.portrait)

    .row
      .col.s12.m4
        %span.bold Name
      .col.s12.m8
        %span= @client.name
    .row
      .col.s12.m4
        %span.bold Category
      .col.s12.m8
        %span= @client.categories.sort_by(&:name).map(&:name).join(', ').html_safe

    .row
      .col.s12.m4
        %span.bold Featured
      .col.s12.m8
        %span= @client.featured.humanize
