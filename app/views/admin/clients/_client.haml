%tr{id: "#{dom_id client}", class: "#{color_tr(client)}"}
  %td= client.name
  %td= client.featured.humanize
  %td
    .two-lines= client.categories.sort_by(&:name).map(&:name).join(', ').html_safe
  %td
    = link_to admin_client_path(client), class: 'black-text' do
      %i.material-icons visibility
    %span &nbsp;
    = link_to edit_admin_client_path(client), class: 'black-text' do
      %i.material-icons edit
    %span &nbsp;
    = link_status client
    %a.dropdown-button.black-text{"data-activates": "dropdown_actions_#{client.id}","data-alignment": "left"}
      %i.material-icons more_vert
    %ul.dropdown-content{id: "dropdown_actions_#{client.id}"}
      %li= link_to 'Testimonials', admin_client_testimonials_path(client)
