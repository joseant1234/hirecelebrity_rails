.card.no-margin
  .card-content

    .row.border-collection
      %nav.white.black-text.z-depth-0
        .nav-wrapper
          .col.s12.m10
            = link_to 'Celebrities',admin_celebrities_path, class: "breadcrumb blue-text"
            = link_to @event.celebrity.name,admin_celebrity_path(@event.celebrity), class: "breadcrumb blue-text"
            = link_to 'Events',admin_celebrity_events_path(@event.celebrity), class: "breadcrumb blue-text"
            = link_to 'EDIT',edit_admin_event_path(@event), class: "breadcrumb black-text"
          .col.s12.m2.right-text
            = submit_tag 'Save', "data-disable-with": "Saving ...", class: 'deep-purple accent-4 btn', form: "edit_event_#{@event.id}"

    .row
      .col.s12
        = render 'form'
