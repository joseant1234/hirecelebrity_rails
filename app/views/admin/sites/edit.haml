.card.no-margin
  .card-content

    .row.border-collection
      %nav.white.black-text.z-depth-0
        .nav-wrapper
          .col.s12.m10
            = link_to 'Sites', admin_sites_path, class: "breadcrumb blue-text"
            = link_to 'EDIT', edit_admin_site_path(@site), class: "breadcrumb black-text"
          .col.s12.m2.right-text
            = submit_tag 'Save', "data-disable-with": "Saving ...", class: 'deep-purple accent-4 btn', form: "edit_site_#{@site.id}"

    .row
      .col.s12
        = render 'form'
