<div class="row unregistered no-margin">
  <div class="col m6 s12 offset-m3">
    <h1 class="white-text center top-space upper bold">Hire celebrities</h1>
    <div class="card top-space">
      <div class="center big-padding">
        <span class="bold medium">Forgot your password?</span>
      </div>
      <div class="card-content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="row">
            <div class="col s12">
              <%= devise_error_messages! %>
            </div>
          </div>
          <div class="row top-space">
            <div class="input-field col s12">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
              <%= f.label :email %>
            </div>
          </div>

          <div class="actions">
          	<%= f.submit "Send me reset password instructions",class: 'btn deep-purple accent-4 full-width' %>
          </div>
          <div class="top-space">
            <%= link_to "I know my password", new_session_path(resource_name) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
